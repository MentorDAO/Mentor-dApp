{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "chain": {
      "dependsOn": ["^chain"],
      "outputs": [""],
      "inputs": ["contracts/**/*.sol"]
    },
    "watch": {
      "dependsOn": ["^watch"],
      "outputs": [""]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": [""]
    },
    "lab": {
      "dependsOn": ["^watch", "^chain", "@turbo-eth/demo-app#dev"],
      "outputs": [""]
    }
  }
}